<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>

    <% results.forEach(function(post) {%>
        <li>
            <img 
                src="<%=post.imageUrl %>"
                alt="Post image"
                width="100"
                height="100"
            />
            <p><%= post.message %> </p>
            <p><%= post.userID %> </p>
            <p><em> Posted by</em> <%= post.postedBy.name %></p>
            <p><em> Liked by</em> <%= post.likedBy.name %> <em> Disliked by</em> <%= post.dislikedBy.name %></p>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>