<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol class="post container">

    <% results.forEach(function(post) {%>
        
            <img
                src="<%=post.imageUrl %>"
                alt="Post image"
                width="100"
                height="100"
            />
            <p><%= post.message %> </p>
            <p><%= post.userID %> </p>
            <p>Posted by <%= post.postedBy.name %></p>
            <p>Liked by<%= post.likedBy.name %> Disliked by <%= post.dislikedBy.name %></p>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>