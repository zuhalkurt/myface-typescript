<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<div class= "container">
    <div class="profile-cover-image">
        <img src="<%= coverImageUrl %>" alt="<%= name %>"/>
    </div>
<div class="profile">
    <div class="Profile-wrapper">
        <div class="user-image">
            <img src="<%= profileImageUrl %>" alt="<%= name %>" width="50" height="50" />
        </div>
        <div class="profile-info">
            <h1><%= name %></h1>
            <p class="bold"><%= username %></p>
            <p><%= email %></p>
        </div>
    </div>
</div>
 </div>
    <h2 class="sub-title gutter-left"><%= name.split(" ")[0] %>'s Posts</h2>
    <div class="scroll">
    <ol class="post-list">
        <% posts.forEach(function(post) {%>
            <li class="post">
            <img class="post-image" src="<%= post.imageUrl %>" alt="Post image" width="100" height="100" />
            <p><%= post.message %></p>
            </li>
        <% }); %>
    </ol>
</div>
    <button>Load More</button>
    <h2>Posts <%= name.split(" ")[0] %> Liked</h2>
    <div class="scroll">
    <ol class="post-list">
        <% likes.forEach(function(post) {%>
            <li class="post">
            <img class="post-image" src="<%=post.imageUrl %>" alt="Post image" width="100" height="100" />
            <p><%= post.username %></p>
            <p><%= post.createdAt.slice(0, 10) %></p>
            <p><%= post.message %></p>
            </li>
        <% }); %>
    </ol>
</div>
    <button>Load More</button>
    <h2>Posts <%= name.split(" ")[0] %> Disliked</h2>
    <ol class="post-list">
        <% dislikes.forEach(function(post) {%>
            <li class="post">
            <img class="post-image" src="<%=post.imageUrl %>" alt="Post image" width="100" height="100" />
            <p><%= post.username %></p>
            <p><%= post.createdAt.slice(0, 10) %></p>
            <p><%= post.message %></p>
            </li>
        <% }); %>
    </ol>
    <button>Load More</button>
    
</body>
<%- include('_footer') -%>
</html>